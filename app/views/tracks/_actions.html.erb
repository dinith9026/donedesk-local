<% track_presenter.when_user_can(:edit) do %>
  <%= link_to track_presenter.edit_path, class: 'dropdown-item' do %>
    <i class="icon-pen3"></i> Edit
  <% end %>
<% end %>

<% track_presenter.when_user_can(:show) do %>
  <% if controller.action_name == 'index' %>
    <%= link_to track_presenter.show_path, class: 'dropdown-item' do %>
      <i class="icon-eye6"></i> View
    <% end %>
  <% end %>
<% end %>

<div class="dropdown-divider"></div>

<% track_presenter.when_user_can(:deactivate) do %>
  <%= link_to track_presenter.deactivate_path, method: :put, class: 'dropdown-item warning', data: { confirm: track_presenter.confirm_deactivate_message } do %>
    <i class="icon-blocked warning"></i> Deactivate
  <% end %>
<% end %>

<% track_presenter.when_user_can(:reactivate) do %>
  <%= link_to track_presenter.reactivate_path, method: :put, class: 'dropdown-item success', data: { confirm: "Are you sure?\n\nIMPORTANT: This action will NOT reactivate any deactivated courses." } do %>
    <i class="icon-power success"></i> Reactivate
  <% end %>
<% end %>

<% track_presenter.when_user_can(:destroy) do %>
  <%= link_to track_presenter.destroy_path, method: :delete, class: 'dropdown-item danger', data: { confirm: 'Are you sure?' } do %>
    <i class="icon-trash danger"></i> Delete
  <% end %>
<% end %>
