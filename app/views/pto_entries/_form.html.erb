<%= form_for @form, url: form_action do |f| %>
  <div class="row match-height">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title" id="basic-layout-colored-form-control"><%= action %> PTO Entry</h4>
        </div>
        <div class="card-body collapse in">
          <div class="card-block">
            <div class="form">

              <%= render 'shared/form_errors', errors: @form.errors.full_messages %>

              <div class="row">
                <div class="col-md-6 offset-md-3">
                  <div class="form-body">

                    <div class="form-group">
                      <p><%= @form.employee_record_full_name %></p>
                    </div>

                    <div class="form-group">
                      <%= f.label :hours %>
                      <%= f.text_field :hours, class: 'form-control', autofocus: true %>
                    </div>

                    <div class="form-group">
                      <%= f.label :date %>
                      <%= f.text_field :date, value: @form.formatted_date, class: 'form-control datetimepicker3', autocomplete: 'off' %>
                    </div>

                    <%= render '/shared/form_actions' %>

                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
<% end %>
