<% document_presenter.when_user_can(:edit) do %>
  <%= link_to document_presenter.edit_path, class: 'dropdown-item' do %>
    <i class="icon-pen3"></i> Edit
  <% end %>
<% end %>

<% document_presenter.when_user_can(:download) do %>
  <%= link_to document_presenter.download_path, class: 'dropdown-item' do %>
    <i class="icon-arrow-down4"></i> Download
  <% end %>
<% end %>

<% document_presenter.when_user_can(:destroy) do %>
  <div class="dropdown-divider"></div>

  <%= link_to '#confirm-delete-modal',
              data: {
                toggle: 'modal',
                target: '#confirm-delete-modal',
                document_id: document_presenter.id,
                destroy_document_path: document_presenter.destroy_path,
                belongs_to_name: document_presenter.belongs_to_name,
                document_type_name: document_presenter.name
              },
              class: 'dropdown-item delete-btn danger' do
  %>
    <i class="icon-trash danger"></i> Delete
  <% end %>
<% end %>
