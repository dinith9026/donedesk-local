<%= form_for form, url: form.form_action do |f| %>
  <div class="row match-height">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title" id="basic-layout-colored-form-control">Invite <%= form.employee_name %></h4>
          <small>Sends an email invite to the employee allowing them to create a DoneDesk login.</small>
        </div>
        <div class="card-body">
          <div class="card-block">
            <div class="form">
              <div class="row">
                <div class="col-md-6 offset-md-3">
                  <div class="form-body">
                    <%= render 'shared/form_errors', errors: form.errors.full_messages %>

                    <div class="form-group is-required">
                      <%= f.label :email %>
                      <%= f.text_field :email, class: 'form-control', placeholder: 'john@example.com', required: true %>
                    </div>
                    <div class="form-group">
                      <div class="checkbox">
                        <label class="form-check-label">
                          <%= f.check_box :role, { class: 'form-check-input', include_hidden: false }, 'account_manager' %>
                          Make Admin
                        </label>
                      </div>
                    </div>

                    <%= render '/shared/form_actions', btn_icon: 'mail6', btn_text: 'Send' %>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
