<%= render layout: '/shared/modal', locals: { title: 'Select one', id: modal_id } do %>
  <div class="bs-callout-grey callout-bordered mb-1">
    <div class="media">
      <div class="media-body p-1">
        <p>Select an office:</p>
        <ul>
          <% offices.each do |office_presenter| %>
            <li class="list-style-square">
              <%= link_to office_presenter.public_send(link_to_path) do %>
                <%= office_presenter.name %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="text-right">
    <button type="button" class="btn btn-secondary right" data-dismiss="modal">
      Cancel
    </button>
  </div>
<% end %>
